class Solution {
public:
    vector<vector<int> > generate(int numRows) {
        vector<vector<int> > res;
        for(int i=0;i<numRows;i++) {
            vector<int> save;
            for(int j=0;j<=i;j++) {
                if(j==0 || j==i) save.push_back(1);
                else save.push_back(res[i-1][j-1]+res[i-1][j]);
            }
            res.push_back(save);
        }
        return res;
    }
};