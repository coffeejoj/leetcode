class Solution {
public:
    int maxArea(vector<int> &height) {
        int res=0;
        if(height.size()<2) return res;
        int l=0; int r=height.size()-1;
        while(l<r) {
            int h=min(height[l], height[r]);
            if (h*(r-l)>res) res=h*(r-l);
            if (height[l]<height[r]) {
                l++;
            } else {
		r--;
            }
        }
        return res;
    }
};